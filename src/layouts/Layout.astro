---

import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContactWhatsapp from "../components/ContactWhatsapp";

interface Props {
    title: string;
    description?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portafolio de Jose Cardona - Desarrollador y programador FullStack</title>
	</head>
	<body>
		<div class="flex flex-col min-h-screen">
			<Header />
			<main class="flex-1 mt-[4.4rem]">
			  <slot />
			</main>
	  
			<!-- 
			<Footer /> -->
			<ContactWhatsapp client:load />
			<Footer />
		  </div>
		<slot />

	</body>
</html>

<style>
	   :root {
        --color-bg-app: #f3f4f6;
        --color-active: #4f716d;
        --primary-color: #021B20;
    }
    html, body {
        font-family: "Onest Variable", sans-serif !important;
        font-optical-sizing: auto;
        background: var(--color-bg-app) !important;
        font-style: normal;
        padding: 0;
        margin: 0;
        overflow: auto;
    }
    h1, h2, h3,  h4, h5, h6, p {
        color: var(--primary-color);
        font-style: normal;
    }
    h1 {
        font-weight: 700;
    }

    .whatsappButton {
        background-color: #4caf50;
        color: #fff;
        padding: 10px 10px;
        border: none;
        border-radius: 50%;
    }
    .text__glowing {
        transition: text-shadow 0.3s ease;
    }

    .text__glowing:hover {
        text-shadow: 1px 1px 20px var(--color-active);
        color: var(--color-active);

    }
</style>
